{#
    Molecule: Card
    Usage: {% include 'components/molecules/card.html.twig' with {title: 'Titre', content: 'Contenu de la carte'} %}
#}
<div class="card {{ class|default('') }}">
	{% if title %}
		<div class="card-header">
			{% include 'components/atoms/heading.html.twig' with {text: title, level: 3} %}
		</div>
	{% endif %}
	<div class="card-body">
		{{ content|default('') }}
	</div>
	{% if footer %}
		<div class="card-footer">
			{{ footer }}
		</div>
	{% endif %}
</div>
