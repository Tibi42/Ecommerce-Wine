{#
    Page: Home
    Usage: {% extends 'layouts/default.html.twig' %}
#}
{% extends 'layouts/default.html.twig' %}

{% block title %}Accueil - EcommerceWine
{% endblock %}

{% block body %}
{# Section Hero #}
{% include 'components/molecules/hero.html.twig' with {
		title: 'Bienvenue sur EcommerceWine',
		subtitle: 'Découvrez notre sélection de vins d\'exception',
		ctaText: 'Découvrir nos vins',
		ctaLink: '#products',
		ctaVariant: 'primary'
	} %}

	{# Section Produits #}
	<section id="products" class="products-section">
		<div class="products-section__container">
			{% include 'components/atoms/heading.html.twig' with {
				text: 'Notre Sélection de Vins',
				level: 2,
				class: 'products-section__title'
			} %}
			
			{% if bottles is defined and bottles is not empty %}
				{% include 'components/organisms/product-grid.html.twig' with {bottles: bottles} %}
			{% else %}
				<div class="products-section__empty">
					<p>Aucun produit disponible pour le moment.</p>
				</div>
			{% endif %}
		</div>
	</section>

	{# Section À propos (optionnelle) #}
	<section class="about-section">
		<div class="about-section__container">
			{% include 'components/atoms/heading.html.twig' with {
				text: 'À Propos de Nous',
				level: 2,
				class: 'about-section__title'
			} %}
			<div class="about-section__content">
				<p class="about-section__text">
					EcommerceWine est votre destination privilégiée pour découvrir des vins d'exception. 
					Nous sélectionnons avec soin chaque bouteille pour vous offrir une expérience &oelig;nologique unique.
				</p>
			</div>
		</div>
	</section>
{% endblock %}

{% block stylesheets %}
	<style>
		.products-section {
			padding: 4rem 2rem;
			background-color: #f8f9fa;
		}

		.products-section__container {
			max-width: 1200px;
			margin: 0 auto;
		}

		.products-section__title {
			text-align: center;
			margin-bottom: 3rem;
			color: #333;
			font-size: 2.5rem;
		}

		.products-section__empty {
			text-align: center;
			padding: 3rem;
			color: #666;
		}
		/* Product Grid */
		.product-grid__container {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
			gap: 2rem;
		}

		.product-grid__item {
			width: 100%;
		}

		/* Bottle Card Styles */
		.bottle-card {
			background: #ffffff;
			border-radius: 12px;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
			overflow: hidden;
			transition: transform 0.3s ease, box-shadow 0.3s ease;
			display: flex;
			flex-direction: column;
			height: 100%;
		}

		a.bottle-card {
			cursor: pointer;
		}

		.bottle-card:hover {
			transform: translateY(-5px);
			box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
		}

		.bottle-card__image {
			width: 100%;
			height: 300px;
			overflow: hidden;
			background-color: #f5f5f5;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.bottle-card__image img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: transform 0.3s ease;
		}

		.bottle-card:hover .bottle-card__image img {
			transform: scale(1.05);
		}

		.bottle-card__content {
			padding: 1.5rem;
			display: flex;
			flex-direction: column;
			flex-grow: 1;
		}

		.bottle-card__content h3 {
			margin: 0 0 0.75rem;
			font-size: 1.25rem;
			font-weight: 600;
			color: #333;
		}

		.bottle-card__description {
			color: #666;
			font-size: 0.9rem;
			line-height: 1.5;
			margin: 0 0 1rem;
			flex-grow: 1;
		}

		.bottle-card__price {
			font-size: 1.5rem;
			font-weight: 700;
			color: #8B4513;
			margin: 0 0 1rem;
		}

		.bottle-card__actions {
			margin-top: auto;
		}


		.about-section__title {
			margin-bottom: 2rem;
			color: #333;
			font-size: 2rem;
		}

		.about-section__text {
			font-size: 1.125rem;
			line-height: 1.8;
			color: #666;
		}

		@media(max-width: 768px) {
			.products-section,
			.about-section {
				padding: 2rem 1rem;
			}

			.products-section__title {
				font-size: 2rem;
			}

			.about-section__title {
				font-size: 1.5rem;
			}

			.product-grid__container {
				grid-template-columns: 1fr;
				gap: 1.5rem;
			}

			.bottle-card__image {
				height: 250px;
			}
		}
	</style>
{% endblock %}
